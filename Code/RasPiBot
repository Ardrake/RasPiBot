class MyRobot:
    def __init__(self, my_id):
        self.robot_id = my_id
        self.servo_list = []

    def add_servo(self, my_id, pos):
        my_servo = Servo(my_id, pos)
        self.servo_list.append(my_servo)


class Servo:
    def __init__(self, my_id, pos):
        self.id = my_id
        self.pos = pos
